{
  "name": "@webdevetc/browser-dump",
  "version": "1.0.8",
  "description": "Dump your JS data to your browser, so you can inspect it easily",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",

    "format": "prettier --write \"src/**/*.ts\" ",
    "lint": "tslint -p tsconfig.json",

    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn format && yarn lint",
    "preversion": "yarn format && yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"

  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WebDevEtc/browser-dump-js"
  },
  "keywords": [
    "dump",
    "browser dump",
    "js",
    "ts",
    "format"
  ],
  "author": "webdevetc",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "jest": "^26.6.1",
    "open": "^7.3.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
